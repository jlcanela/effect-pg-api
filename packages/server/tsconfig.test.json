{
  "extends": "../../tsconfig.base.json",
  "include": ["src/**/*.test.ts"],
  "references": [
    { "path": "tsconfig.src.json" },
    { "path": "../domain" }
  ],
  "compilerOptions": {
    "types": ["node"],
    "tsBuildInfoFile": ".tsbuildinfo/test.tsbuildinfo",
    "rootDir": "src",
    "noEmit": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@org/domain": ["../domain/src/index.js"],
      "@org/domain/*": ["../domain/src/*.js"],
      "@org/mailing": ["../mailing/src/index.js"],
      "@org/mailing/*": ["../mailing/src/*.js"]
    }
  }
}
