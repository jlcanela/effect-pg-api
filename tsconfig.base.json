{
  "compilerOptions": {
    "strict": true,

    "exactOptionalPropertyTypes": true,
    "moduleDetection": "force",
    "composite": true,
    "downlevelIteration": true,
    "resolveJsonModule": true,
    "esModuleInterop": false,
    "declaration": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "NodeNext",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "types": [],
    "isolatedModules": true,
    "sourceMap": true,
    "declarationMap": true,
    "noImplicitReturns": false,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": false,
    "noErrorTruncation": true,
    "allowJs": false,
    "checkJs": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noUncheckedIndexedAccess": true,
    "strictNullChecks": true,
    "baseUrl": ".",
    "target": "ES2022",
    "module": "NodeNext",
    "incremental": true,
    "removeComments": false,
    "plugins": [
      {
        "name": "@effect/language-service"
      }
    ],
    "paths": {
      "@org/domain": ["./packages/domain/src/index"],
      "@org/domain/*": ["./packages/domain/src/*"],
      "@org/domain/test/*": ["./packages/domain/test/*"],
      "@org/mailing": ["packages/mailing/src/index"],
      "@org/mailing/*": ["packages/mailing/src/*"],
      "@org/mailing/test/*": ["packages/mailing/test/*"],
      "@org/server": ["./packages/server/src/index.js"],
      "@org/server/*": ["./packages/server/src/*.js"],
      "@org/server/test/*": ["./packages/server/test/*.js"],
      "@/components/*": ["src/components/*.js"]
    }
  }
}
